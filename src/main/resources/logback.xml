<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-70(%date{"HH:mm:ss,SSS"} %-5level [%logger]) %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="example.LocalClusterMember" level="INFO"/>

    <root level="OFF">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
